{
  "name": "arhiva-educationala",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "next build --turbo",
    "dev": "next dev --turbo",
    "start": "next start",
    "postinstall": "fumadocs-mdx && bun2nix -o bun.nix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint && lint:mdx",
    "lint:mdx": "remark \"content/**/*.mdx\" --quiet --frail",
    "format:mdx": "remark \"content/**/*.mdx\" --output",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-presence": "^1.1.5",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "fumadocs-core": "16.0.1",
    "fumadocs-mdx": "13.0.0",
    "fumadocs-ui": "16.0.1",
    "katex": "^0.16.27",
    "lucide-react": "^0.546.0",
    "next": "16.0.9",
    "next-themes": "^0.4.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "lint-staged": {
    "content/**/*.mdx": [
      "remark --output"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/mdx": "^2.0.13",
    "@types/node": "24.9.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.9",
    "eslint-plugin-mdx": "^3.6.2",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "remark-cli": "^12.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx": "^3.1.1",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-markdown-style-guide": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "unist-util-visit": "^5.0.0",
    "vitest": "^2.1.8"
  }
}
